

@model IEnumerable<ENTIDAD.Facilidades>
<style>
    .gallery {
        filter: brightness(130%);
        animation: escalar;
        cursor: pointer;
        animation: escalar 1.4s infinite alternate;
    }

    .modal-dialog {
        max-width: 800px;
        margin: 30px auto;
    }



    .modal-body {
        position: relative;
        padding: 0px;
        min-height: 400px;
        background: #ccc;
    }




    .close {
        position: absolute;
        right: -30px;
        top: 0;
        z-index: 999;
        font-size: 2rem;
        font-weight: normal;
        color: #fff;
        opacity: 1;
    }

    #image {
        min-height: 200px;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <strong>
                <font style="text-transform: uppercase;">
                    <hr style="color: #47748b; ">
                    <center class="animated infinite bounceOut" slow>
                        Facilidades  <img src="~/Content/img/nature.png" width="40" height="40" />
                    </center>
                    <hr style="color: #47748b; ">
                </font>
            </strong>
        </div>
        <div class="col-4"></div>
    </div>
    <br><br>
    <div class="row" >

        @foreach (var dato in Model)

        {
            <div class="col-sm-4" >
                <div class="form-group gallery" style="border: 1px dashed #ccc" >
                    <img src="@dato.urlImg" data-target="#myModal" data-toggle="modal" class=" card-img-top" width="200" height="200" alt="...">
                    <br><br><br />
                </div>
                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">


                            <div class="modal-body">

                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>

                                <img src="//media.tenor.com/images/556e9ff845b7dd0c62dcdbbb00babb4b/tenor.gif" alt="" id="image" class="img-fluid">



                            </div>

                        </div>
                    </div>
                </div>



            </div>
            <div class="col-sm-8">
                <div style="border: 1px initial #ccc" class="form-group" >
                    <div class="form-group">
                        <div class="col-lg-4"> </div>
                        <div class="col-lg-4">
                            <hr style="color: #47748b; ">
                            <img src="~/Content/img/nature.png" /> <strong> @dato.nombre </strong>
                            <hr style="color: #47748b; ">
                        </div>

                    </div>



                    <div class="form-group">
                        Reglas: @dato.reglas
                    </div>
                    <div class="form-group">
                        Detalles: @dato.detalles
                    </div>
                    <br>
                </div>
            </div>
            @*<div class="col-sm-4"></div>*@

        }

    </div>



</div>

