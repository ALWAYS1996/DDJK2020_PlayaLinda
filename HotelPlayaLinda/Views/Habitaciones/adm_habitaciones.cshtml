@{
    ViewBag.Title = "Mapa";
    var tipoHabitaciones = (IEnumerable<ENTIDAD.TipoHabitacion>)ViewData["tipoHabitacion"];

}


@model IEnumerable<ENTIDAD.Habitacion>


    <div class="container">
       
        <br>
        <br>
        <form action="/Habitaciones/filtrarHabitaciones" method="post">
            <div class="row">
                <div class="col-4"></div>
                <div class="col-4">
                    <hr style="color: #47748b; ">
                    <center><h5>Adminstracion de habitaciones</h5></center>
                    <hr style="color: #47748b; ">
                    <strong>
                        <font style="text-transform: uppercase;">
                            <hr style="color: #47748b; ">
                            <center class="animated infinite bounceOut" slow>
                                <div class="form-group">

                                    <select class="form-control" id="idTipoHabitacion" name="idTipoHabitacion">
                                        @foreach (var tiposHabitacion in tipoHabitaciones)
                                        {
                                            <option value="@tiposHabitacion.codigoTipoHabitacion">@tiposHabitacion.nombre</option>
                                        }
                                    </select>
                                </div>
                            </center>
                            <hr style="color: #47748b; ">
                        </font>
                    </strong>
                  <center>  <button class="btn btn-outline-info" type="submit"> Filtrar </button> </center>
                </div>
                <div class="col-4"></div>
            </div>
        </form>
    </div>


