@model IEnumerable<ENTIDAD.Imagen>
@{
    var contenido = (IEnumerable<ENTIDAD.Contenido>)ViewData["contenidoVista"];
    var listadoPromociones = (IEnumerable<ENTIDAD.Promocion>)ViewData["listadoPromociones"];
    var publicidad = (IEnumerable<ENTIDAD.Publicidad>)ViewData["listarPublicidad"];

    ViewBag.Title = "Inicio";
}

<body>
    <div class="container">


        <div class="row">

            <div class="col-lg-12">
                <div id="demo" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ul class="carousel-indicators">
                        <li data-target="#demo" data-slide-to="0" class="active"></li>
                        <li data-target="#demo" data-slide-to="1"></li>
                        <li data-target="#demo" data-slide-to="2"></li>
                    </ul>

                    <!-- The slideshow -->

                    <center>

                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/Content/img/playa1.jpg" class="container-fluid" alt="Los Angeles" width="850" height="300">
                            </div>
                            @foreach (var dato in Model)
                            {
                                <div class="carousel-item">
                                    <img src="@dato.imgPath" class="container-fluid" alt="Los Angeles" width="850" height="300">

                                </div>
                            }
                        </div>

                    </center>

                    <!-- Left and right controls -->
                    @*<a id="enlaceMenu" class="carousel-control-prev enlaceMenu" href="#demo" data-slide="prev">
                        <span class="carousel-control-prev-icon "></span>
                    </a>
                    <a id="enlaceMenu" class="carousel-control-next enlaceMenu" href="#demo" data-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </a>*@

                </div>
            </div>
        </div>
        <br><br>
        <div class="row">
            <center>
                @foreach (var dato in contenido)
                {
                    <div class="card mb-3 " style="border:2px solid #ebe3e3; background-color:#ffffff">
                        <div class="card-header"><h5 class="card-title"> <strong>@Html.DisplayFor(modelItem => dato.titulo) </strong></h5></div>
                        <div class="card-body text-dark">
                            @*<h5 class="card-title">Dark card title</h5>*@
                            <p class="card-text text-justify">@Html.DisplayFor(modelItem => dato.contenido)</p>
                        </div>
                    </div>
                }

            </center>
            <div class="col-md-2"> </div>

        </div>




        <br><br>
        <div class="row  ">

            @foreach (var dato1 in listadoPromociones)
            {
                <div class="card" style="width: 18rem;border:2px solid #ebe3e3; background-color:#ffffff">
                    <p class="card-text">
                        <font style="text-transform: uppercase;">
                            <center>
                                <strong class="">

                                    <hr style="border-top: 1px solid black;" width="80%">
                                    Promociones Especiales
                                    <hr style="border-top: 1px solid black;" width="80%">
                                </strong>
                            </center>
                        </font>
                    </p>
                    <img src="@dato1.imgUrl" class="card-img-top" alt="..." width="100" height="100">
                    <div class="card-body">

                        <p class="card-text">@dato1.informacion</p> <h5 class="card-title btn btn-outline-primary ">Precio: ₡@dato1.precio</h5>
                        <a href="#" class="btn btn-outline-primary">Reservar AHORA!</a>
                    </div>
                </div>
                <hr style="border-top: 5px solid #808080">

            }



        </div>

    </div>

</body>












